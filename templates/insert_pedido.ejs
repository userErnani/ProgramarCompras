<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastros</title>
    <link rel="stylesheet" href="/public/insert_pedido.css">
</head>

<body>
    <div class="btn-back">
        <a class="btn-back-01" href="/user/list_pedidos">Voltar</a>
    </div>
    <div class="miolo">
        <form action="/user/insert_pedido" method="POST">
            <div class="centro-miolo">
                <h1>PEDIDO DE COMPRA</h1>
                <div class="email">
                    <input type="number" placeholder="Numero do Pedido" name="pedido" required>
                </div>
                <div id="dtpedido" class="email">
                    <input type="date" placeholder="" name="dtpedido" required>
                </div>
                <div class="email">
                    <input type="date" placeholder="PrevisÃ£o Entrega" name="preventrega" required>
                </div>
                <div class="email">
                    <input type="text" placeholder="Fornecedor" name="fornecedor" required>
                </div>
                <div class="email">
                    <input type="text" placeholder="Material" name="material" required>
                </div>
                <div class="email">
                    <input type="number" placeholder="largura" name="largura" required>
                </div>
                <div class="email">
                    <input id="quantidade" type="number" placeholder="quantidade" name="quantidade" required>
                </div>
                <div class="email">
                    <input id="linear" type="number" placeholder="Mts Linear" name="linear" required>
                </div>
                <div class="email">
                    <input id="total" type="number" placeholder="Qtd. Total" name="total" readonly>
                </div>
                <div class="botao" onclick="total()">
                    <button> Salvar
                </div>
        </form>
    </div>

    <script>
        function total() {
            let quantidade = document.getElementById('quantidade').value
            let linear = document.getElementById('linear').value
            let res = (parseFloat(quantidade) * parseInt(linear)).toFixed(2)
            document.getElementById("total").value = res
        }
    </script>

</body>

</html>